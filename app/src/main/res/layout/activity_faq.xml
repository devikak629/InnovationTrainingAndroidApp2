<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#2b78e4"
    tools:context="com.example.devika.innovationtraining.faq">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#2b78e4"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:singleLine="true" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/imageView3"
            android:src="@drawable/logogreen"
            android:background="#ffffff"
            android:layout_marginTop="75dp" />

        <ScrollView
            android:layout_width="350dp"
            android:layout_height="310dp"
            android:id="@+id/scrollView2"
            android:layout_gravity="center"
            android:background="#b6d7a8"
            android:layout_marginTop="90dp"
            android:layout_weight="1"
            android:fillViewport="false"
            android:touchscreenBlocksFocus="false"
            android:enabled="true"
            android:visibility="visible"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:editable="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="14dp"
                android:visibility="visible"
                android:nestedScrollingEnabled="false" />
        </ScrollView>

    </FrameLayout>

</FrameLayout>
