<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0095da"
    tools:context="com.example.devika.innovationtraining.CongratsPage">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Inspirational Message!"
            android:id="@+id/InspirationalMessage"
            android:layout_gravity="center"
            android:textColor="#ff9900"
            android:textSize="31sp"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Congrats!"
            android:id="@+id/textView7"
            android:layout_gravity="center"
            android:textSize="60dp"
            android:gravity="center"
            android:layout_marginTop="-80dp" />

        <Button android:id="@+id/Next" style="?metaButtonBarButtonStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="0.62" android:text="Next"
            android:singleLine="false"
            android:background="#7fc241"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            android:layout_marginTop="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:id="@+id/timer"
            android:layout_gravity="center_horizontal|bottom"
            android:enabled="true"
            android:textColor="#7fc241"
            android:textSize="30dp"
            android:layout_marginBottom="140dp"
            android:textAlignment="center"
            android:singleLine="false" />

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/faqbutton3"
            android:layout_gravity="left|top"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:src="@drawable/faq_icon"
            android:background="#0095da"
            android:focusable="false" />

    </FrameLayout>

</FrameLayout>
